<Window x:Class="HuiDesktop.NextGen.DownloadPackageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HuiDesktop.NextGen"
        mc:Ignorable="d"
        Title="下载包" Height="170" Width="450" ResizeMode="NoResize" WindowStyle="ToolWindow" Closing="Window_Closing">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="44px"/>
                <RowDefinition/>
                <RowDefinition Height="44px"/>
            </Grid.RowDefinitions>
            <ProgressBar x:Name="ProgressProgressBar" Margin="10" Grid.Row="1"/>
            <Button x:Name="OkButton" FontFamily="{StaticResource FontAwesome}" Content="&#xf019;" Margin="0,10,10,10" FontSize="16" HorizontalAlignment="Right" Width="24" Grid.Row="2" Click="OkButton_Click"/>
            <Label x:Name="SpeedLabel" Content="等待下载..." Margin="10,10,39,10" Grid.Row="2"/>
            <TextBox x:Name="PathTextBox" Margin="10" TextWrapping="Wrap" Text="https://desktop.huix.cc/api/arknights/%E5%88%9D%E9%9B%AA-%E5%BC%80%E6%96%AF%E7%89%B9%E4%B9%8B%E9%9C%9C/package" IsReadOnly="True" IsReadOnlyCaretVisible="True" BorderThickness="0,0,0,1"/>
        </Grid>
    </Grid>
</Window>
